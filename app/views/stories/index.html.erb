<h1> Peeps from Seattle & Beyond </h1>

<% @stories.each do |story| %>
    <%= link_to "#{story.subject} from #{@countries[story.country_id-1].name}", story_path(story) %><br><br>
<% end %>
<br>
<button>
<%= link_to "Write your own story", new_story_path%> 
</button>

<br>
<h3> Our writers </h3>
<% @writers.each do |writer| %>
    <%=  link_to writer.name, writer_path(writer) %><br>
<% end %>

<h3> Search stories by category </h3>
<% @tags.each do |tag| %>
    <%=  link_to tag.name, tag_path(tag) %><br>
<% end %>

<%= image_tag("/../../../assets/photo_montage.jpg") %>

